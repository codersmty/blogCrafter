<!DOCTYPE html>
<html>
  <head>
    <title>MiniBlogBeta</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark responsive">
  <a class="navbar-brand" href="#"> <%=image_tag("app/assets/images/codersmty.png")%>
    Code Crafters</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav pull-right">
      <li class="nav-item active">
        <a class="nav-link" href= "<%= schedules_path %>">Home<span class="sr-only">(current)</span></a>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item">
        <a class="nav-link" href="<%=destroy_user_session_path%>" data-method="delete">Salir</a>
      </li>
      <% else %>
        <li class="nav-item">
          <a class="nav-link" href="<%=new_user_session_path%>">Iniciar Sesion</a>
        </li>

        <% end %>
    </ul>
  </div>
</nav>
<% if user_signed_in? %>
<h3>Bienvenido <%= current_user.name%></h3>
<% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

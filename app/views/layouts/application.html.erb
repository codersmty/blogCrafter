    <h3>Bienvenido <%= current_user.name%></h3>
    <%= link_to 'Salir', destroy_user_session_path, method: :delete %>
    <% else %>
    <%= link_to 'Iniciar sesion', new_user_session_path %>
    <% end %> -->
    <%= yield %>
  </body>
</html>

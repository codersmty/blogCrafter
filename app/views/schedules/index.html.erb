<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Titile</th>
      <th>Content</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.titile %></td>
        <td><%= schedule.content %></td>
        <td><%= schedule.published %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= if can? :edit, schedule
          link_to 'Edit', edit_schedule_path(schedule) end %></td>
        <td><%= if can? :destroy, schedule
          link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path %>
